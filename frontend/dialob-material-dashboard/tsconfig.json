{
  "compilerOptions": {
    "target": "ESNext",                 // Target ECMAScript version
    "module": "ESNext",                 // Module system to use
    "lib": ["DOM", "ESNext"],           // Libraries to be included
    "jsx": "react-jsx",                 // JSX parsing method
    "moduleResolution": "Node",         // Module resolution strategy
    "esModuleInterop": true,            // Allows importing CommonJS modules as ES Modules
    "skipLibCheck": true,               // Skip type checking of declaration files
    "strict": true,                     // Enable all strict type-checking options
    "declaration": true,                // Generates corresponding '.d.ts' file
    "declarationDir": "./dist/types",   // Output directory for generated declaration files
    "outDir": "./dist",                 // Redirect output structure to the directory
    "rootDir": "./src",                 // Specify the root directory of input files
    "forceConsistentCasingInFileNames": true  // Ensures consistent casing in filenames
  },
  "include": ["src/**/*"],              // Files to include in compilation
  "exclude": ["node_modules", "dist"]   // Files to exclude from compilation
}
