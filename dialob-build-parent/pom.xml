    <maven-site-plugin.version>3.21.0</maven-site-plugin.version>
    <jib-maven-plugin.version>3.4.6</jib-maven-plugin.version>
    <cyclonedx-maven-plugin.version>2.9.1</cyclonedx-maven-plugin.version>

