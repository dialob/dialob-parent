    <!-- plugin dependencies -->
    <git-commit-id-maven-plugin.version>9.0.1</git-commit-id-maven-plugin.version>
    <maven-pmd-plugin.version>3.26.0</maven-pmd-plugin.version>
    <spotbugs-maven-plugin.version>4.9.4.2</spotbugs-maven-plugin.version>
